# Core (required)
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/your-key-here

# Targets
# Comma-separated addresses to watch (will be lowercased/normalized); default includes the FeeModule 0xE3...
TARGET_ADDRESSES=0xE3f18aCc55091e2c48d883fc8C8413319d4Ab7b0

# Pending subscription
# USE_ALCHEMY_PENDING=true forces alchemy_pendingTransactions; auto-detected if RPC URL contains alchemy.com
USE_ALCHEMY_PENDING=true

# Heartbeat
HEARTBEAT_BLOCKS=1

# CLOB endpoints
CLOB_REST_URL=https://clob.polymarket.com
CLOB_WS_URL=wss://clob.polymarket.com/ws

# CLOB API credentials (required to place orders)
CLOB_API_KEY=your-api-key
CLOB_API_SECRET=your-api-secret
CLOB_API_PASSPHRASE=your-api-passphrase

# Trading identity
# PRIVATE_KEY is the EOA signing key; FUNDING_ADDRESS holds USDC.e or tokens
PRIVATE_KEY=0x...
FUNDING_ADDRESS=0x...
# SIGNATURE_TYPE: 0 = EOA, 1 = POLY_PROXY, 2 = POLY_GNOSIS_SAFE
SIGNATURE_TYPE=0

# Watcher needle (address to match inside calldata, lowercased without 0x)
# Defaults to the maker address 0x557bEd... used in matchOrders filter
WATCH_NEEDLE=557bed924a1bb6f62842c5742d1dc789b8d480d4

# Debug logging
DEBUG=false
