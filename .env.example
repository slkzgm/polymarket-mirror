###############################################################################
# Required
###############################################################################
# Polygon WSS RPC (used by onchain watcher)
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/your-key-here

###############################################################################
# Watcher targets & settings
###############################################################################
# Comma-separated addresses to watch (normalized)
# Default includes the FeeModule 0xE3...
TARGET_ADDRESSES=0xE3f18aCc55091e2c48d883fc8C8413319d4Ab7b0
# Optional: force alchemy_pendingTransactions; auto-detected if RPC URL contains alchemy.com
USE_ALCHEMY_PENDING=true
# Heartbeat frequency in blocks
HEARTBEAT_BLOCKS=1

###############################################################################
# CLOB / Gamma endpoints
###############################################################################
# REST endpoints (public)
CLOB_REST_URL=https://clob.polymarket.com
# CLOB WS (public market streams)
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/
# Gamma markets API (metadata)
GAMMA_API_URL=https://gamma-api.polymarket.com
GAMMA_API_KEY=

###############################################################################
# Copy trading
###############################################################################
# Fraction of observed fill to copy (0.1 = 10%) [default: 0.1]
COPY_SCALE=0.1
# Max slippage in bps (500 = 5%) [default: 500]
COPY_SLIPPAGE_BPS=500
# Order type: FAK (default), FOK, GTC, GTD
COPY_ORDER_TYPE=FAK
# Simulate only (no order placement) [default: true]
COPY_SIMULATE_ONLY=true
# Allow buy/sell copy (set false to disable a side) [default: true/true]
COPY_ALLOW_BUY=true
COPY_ALLOW_SELL=true

###############################################################################
# Trading identity (required if COPY_SIMULATE_ONLY=false)
###############################################################################
# EOA signing key; FUNDING_ADDRESS holds USDC.e/tokens
PRIVATE_KEY=0x...
FUNDING_ADDRESS=0x...
# SIGNATURE_TYPE: 0 = EOA, 1 = POLY_PROXY, 2 = POLY_GNOSIS_SAFE
SIGNATURE_TYPE=0
# CLOB API credentials (builder auth)
CLOB_API_KEY=your-api-key
CLOB_API_SECRET=your-api-secret
CLOB_API_PASSPHRASE=your-api-passphrase

###############################################################################
# Logging
###############################################################################
# "json" (default) or "readable"
LOG_FORMAT=json
# Debug (verbose logger)
DEBUG=false
